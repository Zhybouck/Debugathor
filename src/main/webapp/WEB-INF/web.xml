<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:applicationContext.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>fr.formation.controller.ListenerDebugathor</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>ServletDebugathor</servlet-name>
		<!-- <display-name>ServletDebugathor</display-name> -->
		<!-- <description></description> -->
		<servlet-class>fr.formation.controller.ServletDebugathor</servlet-class>

	</servlet>


	<servlet-mapping>
		<servlet-name>ServletDebugathor</servlet-name>
		<url-pattern>/ServletDebugathor</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>
			index.jsp
		</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>MySQL Hibernate JNDI Datasource</description>
		<res-ref-name>jdbc/debug</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>